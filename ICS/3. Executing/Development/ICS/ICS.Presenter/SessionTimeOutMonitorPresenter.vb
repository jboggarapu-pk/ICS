    ''' <item>
    ''' <term>Jhansi</term>
    ''' <description>
    ''' <para>10/23/2019</para>
    ''' <para>Implemented Coding Standards.</para>
    ''' </description>
    ''' </item>
    ''' </list>
    ''' </remarks>
    Private Sub LoadViewData()
        Try
            Dim milliseconds As Integer = 60000
            m_view.TimerInterval = m_view.SessionTimeout * milliseconds
        Catch
            Throw
        End Try
    End Sub

